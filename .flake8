[flake8]
# Maximum line length
max-line-length = 200

# Maximum complexity for functions
max-complexity = 10

# Ignore specific error codes
ignore = 
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by max-line-length)
    E501,
    # F401: imported but unused (sometimes needed for imports)
    # F841: local variable assigned but never used (useful for debugging)

# Exclude directories and files
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    node_modules,
    migrations,
    app_original.py

# Select specific error codes to check
select = 
    # Pyflakes errors
    F,
    # Pycodestyle errors
    E,
    # Pycodestyle warnings
    W,
    # McCabe complexity
    C90

# Per-file ignores
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401,
    # Allow long lines in config files
    config.py:E501,
    # Allow unused variables in test files
    test_*.py:F841

# Show source code for each error
show-source = True

# Show pep8 error codes
show-pep8 = True

# Count errors
count = True

# Enable color output
color = always

# Statistics
statistics = True